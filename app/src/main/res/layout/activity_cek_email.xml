<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_drawable"
    tools:context=".CekEmail">
  <ImageView
      android:layout_width="72dp"
      android:layout_height="72dp"
      android:src="@drawable/ic_baseline_arrow_back_24"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      android:layout_marginTop="24dp"
      android:layout_marginStart="12dp"/>
  <TextView
      android:id="@+id/CekEmailTitle"
      android:layout_width="200dp"
      android:layout_height="wrap_content"
      android:text="Cek Email"
      android:textSize="16pt"
      android:fontFamily="@font/redhatdisplay_regular"
      android:textStyle="bold"
      android:textColor="@color/white"
      android:textAlignment="center"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      android:layout_marginTop="32dp"/>
  <TextView
      android:id="@+id/CekEmail"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="Link reset password telah dikirim."
      android:textSize="12pt"
      android:textColor="@color/white"
      android:fontFamily="@font/redhatdisplay_regular"
      android:textStyle="bold"
      app:layout_constraintTop_toBottomOf="@id/CekEmailTitle"
      app:layout_constraintStart_toStartOf="parent"
      android:layout_marginHorizontal="48dp"
      android:layout_marginTop="12dp"/>
  <TextView
      android:id="@+id/ResetPassword"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="Silahkan cek inbox Anda"
      android:textSize="8pt"
      android:textColor="@color/white"
      android:fontFamily="@font/redhatdisplay_regular"
      app:layout_constraintTop_toBottomOf="@id/CekEmail"
      app:layout_constraintStart_toStartOf="parent"
      android:layout_marginHorizontal="48dp"/>
  <androidx.cardview.widget.CardView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      app:cardCornerRadius="32dp"
      android:backgroundTint="@color/pink"
      app:layout_constraintTop_toBottomOf="@id/ResetPassword"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      android:layout_marginTop="20dp">

    <android.widget.Button
        android:id="@+id/cek_btnKembali"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="KEMBALI"
        android:fontFamily="@font/redhatdisplay_regular"
        android:textStyle="bold"
        android:textSize="12pt"
        android:background="@drawable/button_pink"
        android:textColor="@color/white"/>

  </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>
