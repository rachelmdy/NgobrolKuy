<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_drawable"
    tools:context=".RoomChat">

    <ImageView
        android:id="@+id/ImgPanah"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:src="@drawable/ic_baseline_arrow_back_24"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="24dp"
        android:layout_marginStart="12dp"/>
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/roomchat_imgProfile"
        android:layout_width="84dp"
        android:layout_height="84dp"
        android:src="@drawable/rachel"
        app:layout_constraintTop_toTopOf="@+id/ImgPanah"
        app:layout_constraintStart_toEndOf="@+id/ImgPanah"
        android:layout_marginTop="1dp"
        android:layout_marginStart="12dp"/>

    <TextView
        android:id="@+id/roomchat_vi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="24dp"
        android:text="Rachel cynk"
        android:textColor="@color/white"
        android:textSize="24dp"
        app:layout_constraintStart_toEndOf="@id/roomchat_imgProfile"
        app:layout_constraintTop_toTopOf="@id/roomchat_imgProfile" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="140dp"
        android:layout_marginBottom="80dp"
        android:layout_marginHorizontal="32dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Haloo Musa lagi apa?"
            android:background="@drawable/button_white"
            android:textSize="10pt"
            android:fontFamily="@font/redhatdisplay_regular"
            android:textStyle="bold"
            android:textColor="@color/black"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="haloo juga chel,lagi mam nich"
            android:background="@drawable/button_pink"
            android:layout_gravity="end"
            android:textSize="10pt"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/redhatdisplay_regular"
            android:textStyle="bold"
            android:textColor="@color/white"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="kamu lagi apa?"
            android:background="@drawable/button_pink"
            android:layout_gravity="end"
            android:textSize="10pt"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/redhatdisplay_regular"
            android:textStyle="bold"
            android:textColor="@color/white"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="mikirin kamu xixixi"
            android:background="@drawable/button_white"
            android:layout_marginTop="12dp"
            android:textSize="10pt"
            android:fontFamily="@font/redhatdisplay_regular"
            android:textStyle="bold"
            android:textColor="@color/black"/>
    </LinearLayout>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_white"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="30dp"
        android:layout_marginBottom="25dp"
        android:layout_marginEnd="80dp"
        android:textColor="@color/black"/>
    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/circle"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>